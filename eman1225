  <script>
   let notes = [];
        let archivedNotes = [];
        let deletedNotes = [];
        let trashedNotes = [];

        function addNewFolder() {
            const folderName = prompt("Enter folder name:");
            if (folderName) {
                const folderCard = document.createElement("div");
                folderCard.className = "col-md-3";
                folderCard.innerHTML = `
                    <div class="card" style="background-color: #e3f2fd;">
                        <div class="d-flex justify-content-between">
                            <div class="card-title">${folderName}</div>
                            <div class="card-options"><i class="fas fa-ellipsis-h" onclick="showOptions(this)"></i></div>
                        </div>
                        <div class="card-date">Today</div>
                    </div>
                `;
                document.getElementById("recent-folders").appendChild(folderCard);
            }
        }

        function addNewNote() {
            const noteName = prompt("Enter note name:");
            if (noteName) {
                const noteCard = document.createElement("div");
                noteCard.className = "col-md-3";
                noteCard.innerHTML = `
                    <div class="card" style="background-color: #e3f2fd;">
                        <div class="d-flex justify-content-between">
                            <div class="card-title">${noteName}</div>
                            <div class="card-options"><i class="fas fa-ellipsis-h" onclick="showOptions(this)"></i></div>
                        </div>
                        <div class="card-date">Today</div>
                    </div>
                `;
                document.getElementById("my-notes").appendChild(noteCard);
                notes.push(noteCard);
            }
        }

        function showOptions(element) {
            const options = document.createElement("div");
            options.className = "options";
            options.innerHTML = `
                <div onclick="archiveNote()">Archive</div>
                <div onclick="deleteNote()">Delete</div>
                <div onclick="trashNote()">Trash</div>
            `;
            element.parentElement.appendChild(options);
        }

        function archiveNote() {
            const note = event.target.closest(".col-md-3");
            archivedNotes.push(note);
            note.remove();
        }

        function deleteNote() {
            const note = event.target.closest(".col-md-3");
            deletedNotes.push(note);
            note.remove();
        }

        function trashNote() {
            const note = event.target.closest(".col-md-3");
            trashedNotes.push(note);
            note.remove();
        }

        function showArchive() {
            document.getElementById("my-notes").innerHTML = "";
            archivedNotes.forEach(note => {
                document.getElementById("my-notes").appendChild(note);
            });
        }

        function showDeleted() {
            document.getElementById("my-notes").innerHTML = "";
            deletedNotes.forEach(note => {
                document.getElementById("my-notes").appendChild(note);
            });
        }

        function showTrash() {
            document.getElementById("my-notes").innerHTML = "";
            trashedNotes.forEach(note => {
                document.getElementById("my-notes").appendChild(note);
            });
        }

        function upgradePlan() {
            alert("Upgrade plan feature is not implemented yet.");
        }

        function submitEmail() {
            const email = document.getElementById("userEmail").value;
            if (email) {
                localStorage.setItem("userEmail", email);
                closeModal();
            } else {
                alert("Please enter a valid email.");
            }
        }

        function closeModal() {
            document.getElementById("emailModal").style.display = "none";
        }

        window.onload = function() {
            const userEmail = localStorage.getItem("userEmail");
            if (!userEmail) {
                document.getElementById("emailModal").style.display = "block";
            }
        }
  </script>
